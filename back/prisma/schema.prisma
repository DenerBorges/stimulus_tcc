// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URI")
}

model User {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  user         String
  birthdate    String
  email        String     @unique
  password     String
  mobile       String?
  document     String?
  zipCode      String?
  street       String?
  number       String?
  complement   String?
  neighborhood String?
  city         String?
  state        String?
  project      Project[]
  donation     Donation[]
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  category    String
  goal        Float    @db.Double
  image       String
  reward      Reward[]
  donation     Donation[]
  User        User     @relation(fields: [userId], references: [id])
  userId      String   @db.ObjectId
}

model Reward {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  value       Float   @db.Double
  Project     Project @relation(fields: [projectId], references: [id])
  projectId   String  @db.ObjectId
}

enum DonationStatus {
  PENDING
  PAID
  CANCELED
}

model Donation {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  status        DonationStatus @default(PENDING)
  total         Float          @db.Double
  transactionId String?
  project       Project        @relation(fields: [projectId], references: [id])
  projectId     String         @db.ObjectId
  User          User           @relation(fields: [userId], references: [id])
  userId        String         @db.ObjectId
}
